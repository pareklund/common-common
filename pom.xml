<project 
  xmlns="http://maven.apache.org/POM/4.0.0" 
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

  <modelVersion>4.0.0</modelVersion>

  <parent>
    <groupId>com.anygine.common.build</groupId>
    <artifactId>anygine-top-parent</artifactId>
    <version>1.0-SNAPSHOT</version>
  </parent>

  <groupId>com.anygine.common.common</groupId>
  <artifactId>common-common-module</artifactId>
  <version>1.0-SNAPSHOT</version>
  <packaging>pom</packaging>

  <name>Anygine Common Common Module</name>
  <url>http://maven.apache.org</url>

  <scm>
    <url>git://nasty:8080/git/</url>
    <connection>scm:git:ssh://admin@nasty/share/git/common-common.git</connection>
    <developerConnection>scm:git:ssh://admin@nasty/share/git/common-common.git</developerConnection>
  </scm>

  <dependencies>
  </dependencies>
  
  <modules>
    <module>common-common-api</module>
    <module>common-common-entity-api</module>
    <module>common-common-entity-base</module>
    <module>common-common-function-callee</module>
    <module>common-common-geometry-api</module>
    <module>common-common-inject-api</module>
    <module>common-common-input-api</module>
    <module>common-common-job-callee</module>
    <module>common-common-metrics-callee</module>
    <module>common-common-resource-api</module>
    <module>common-common-rules-callee</module>
    <module>common-common-service-api</module>
    <module>common-common-service-async-api</module>
    <module>common-common-service-async-base</module>
    <module>common-common-service-base</module>
    <module>common-common-util</module>    
  </modules>
  
  <!-- TODO: Import definitions below from module-common-pom.xml (or similar) -->
  
  <build>
    <plugins>
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>buildnumber-maven-plugin</artifactId>
        <version>1.2</version>
        <executions>
          <execution>
            <phase>${buildnumber.plugin.phase}</phase>
            <inherited>false</inherited>
            <goals>
              <goal>create</goal>
            </goals>
          </execution>
        </executions>
        <configuration>
          <doCheck>false</doCheck>
          <doUpdate>true</doUpdate>
        </configuration>
      </plugin>
      
      <plugin>
        <groupId>org.codehaus.mojo</groupId>
        <artifactId>properties-maven-plugin</artifactId>
        <version>1.0-alpha-2</version>
        <executions>
          <execution>
            <phase>generate-resources</phase>
            <inherited>false</inherited>
            <goals>
              <goal>write-project-properties</goal>
            </goals>
            <configuration>
              <outputFile>
                ${project.build.outputDirectory}/module.properties
              </outputFile>
            </configuration>
          </execution>
        </executions>
      </plugin>
            
    </plugins>
  
  </build>

</project>